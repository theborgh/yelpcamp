<% layout('layouts/boilerplate') %>

<h1>All campgrounds</h1>
<div>
  <a href="/campgrounds/new">Add new campground</a>
</div>

<% for (let camp of campgrounds) { %>
<div class="card mb-2">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= camp.image %>" alt="campground image" class="img-fluid" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= camp.location %></small>
        </p>
        <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">
          View <%= camp.title %>
        </a>
      </div>
    </div>
  </div>
</div>
<% } %>
